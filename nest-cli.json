{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
       {
        "include": "views/**/*",
        "outDir": "dist/src"
      },
      {
        "include": "public/**/*",
        "outDir": "dist/src"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
